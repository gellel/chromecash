{
	"manifest_version": 2,
	"name": "ChromeCash",
	"version": "1.0.0.0",
	"author": "gellel",
	"homepage_url": "https://github.com/gellel/chromecash",

	"default_locale": "en",
	"description": "Scans the page for currencies. Attempts to match them to your location.",

	"icons": {
		"16": "img/png/icon/16/16.png",
		"128": "img/png/icon/128/128.png"
	},

	"background": {
		"scripts": [
			"js/xhr/xhr.js",
			"js/event/event.js"
		],
		"persistent": false
	},

	"content_scripts": [
		{
			"js": [
				"js/prototypes/prototypes.js", 
				"js/chromecash/chromecash.js",
				"js/content/content.js"
			],
			"matches": [
				"http://*/*", 
				"https://*/*"
			],
			"all_frames": false,
			"run_at" : "document_end"
			
		}
	],

	"permissions": [
		"activeTab",
		"tabs", 
		"http://*/*", 
		"https://*/*",
		"storage"
	],

	"web_accessible_resources": [
		"json/currency/currency.json", 
		"json/countries/countries.json"
	]
}